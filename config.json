{
    "servers": {
        "bde-master": {
            "enabled": true,
            "guest-hostname": "bde-master.vm.server",
            "group": "PREMER-BDE Sandbox",
            "box": "bento/centos-7.2",
            "timezone": "Europe/Madrid",
            "cpus": 1,
            "memory": 2048,
            "ssh-prv-key": "~/.ssh/id_rsa",
            "ssh-pub-key": "~/.ssh/id_rsa.pub",
            "network": {
              "interfaces": [
                {
                  "network-type": "private",
                  "if-adapter": "eth1",
                  "if-inet-type": "static",
                  "if-address": "10.0.9.20",
                  "if-netmask": "255.255.0.0"
                }
              ]
            },
            "scripts": [
                "bootstrap.sh",
                "ssh.sh",
                "java.sh",
                "bde.sh",
                "nfs-server.sh"
            ]
        },
        "bde-slave-01": {
            "enabled": true,
            "guest-hostname": "bde-slave-01.vm.server",
            "group": "PREMER-BDE Sandbox",
            "box": "bento/centos-7.2",
            "timezone": "Europe/Madrid",
            "cpus": 1,
            "memory": 2048,
            "ssh-prv-key": "~/.ssh/id_rsa",
            "ssh-pub-key": "~/.ssh/id_rsa.pub",
            "network": {
              "interfaces": [
                {
                  "network-type": "private",
                  "if-adapter": "eth1",
                  "if-inet-type": "static",
                  "if-address": "10.0.9.21",
                  "if-netmask": "255.255.0.0"
                }
              ]
            },
            "scripts": [
                "bootstrap.sh",
                "ssh.sh",
                "java.sh",
                "nfs-client.sh"
            ]
        }
    }
}
